@{
    ViewBag.Title = "Click To View Subjects";
}

<div>
    <h2>@ViewBag.Title</h2>
    <p>
        @using (Html.BeginForm("Index", "Subject", new {ViewBag.ReturnUrl}, FormMethod.Get, new {@class = "form-horizontal", role = "create"})) {
            @Html.AntiForgeryToken()
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Add Subject" class="btn btn-default" />
                </div>
            </div>
        }
    </p>
</div>
